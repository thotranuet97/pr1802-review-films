<header>
  <div class="main-header">
    <div class="container">
      <div class="row">
        <div class="col-md-3 align-self-center">
          <div class="header-left">
            <div class="navbar-toggle">
              <%= link_to "#" do %>
                <%= image_tag "menu-button.png" %>
              <% end %>
            </div>
            <h1 class="logo">
              <%= link_to "#" do %>
                <%= image_tag "logo.png" %>
              <% end %>
            </h1>
          </div>
        </div>
        <div class="col-md-6 align-self-center">
          <div class="header-center">
            <form action="/">
              <select name="" id="" class="custom-select">
                <option selected>Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
              <input type="text" class="form-control input-field">
              <button type="submit" class="btn-submit"><i class="fas fa-search"></i></button>
            </form>
          </div>
        </div>
        <div class="col-md-3 align-self-center">
          <div class="header-right">
            <span><i class="far fa-user"></i> Welcome
              <%= logged_in? ? link_to(current_user.name, current_user) : "Guest" %>
            </span>
            <%= logged_in? ? link_to("Logout", logout_path, method: delete) : link_to("Login", login_path) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
