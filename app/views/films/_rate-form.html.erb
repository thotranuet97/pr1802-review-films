<% if user_signed_in? %>
  <% if @film.raters.find_by(id: current_user.id).blank? %>
    <a href="#" class="btn-rate" data-toggle="modal"
      data-target="#rate-wrapper">
      <%= t ".rate_this_movie" %>
    </a>
    <div class="modal fade" id="rate-wrapper" tabindex="-1" role="dialog"
      aria-labelledby="rate-wrapperCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">
              <%= t ".rate_this_movie" %></h5>
            <button type="button" class="close" data-dismiss="modal"
              aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <%= render "rate-form-detail" %>
        </div>
      </div>
    </div>
  <% else %>
    <a href="#" class="btn-rate" data-toggle="modal"
      data-target="#rate-wrapper">
      <%= t ".edit_your_rate" %>
    </a>
    <div class="modal fade" id="rate-wrapper" tabindex="-1" role="dialog"
      aria-labelledby="rate-wrapperCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">
              <%= t ".edit_your_rate" %></h5>
            <button type="button" class="close" data-dismiss="modal"
              aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <%= render "rate-form-detail" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
