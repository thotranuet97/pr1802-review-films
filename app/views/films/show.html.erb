<div class="film-main">
  <div class="film-banner" style="background-image: url(<%=  @film.poster_url %>)"></div>
  <div class="film-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="thumb">
            <% if @film.thumbnail.present? %>
            <%= image_tag @film.thumbnail_url %>
            <% else %>
            <%= image_tag "400x650.png" %>
            <% end %>
          </div>
          <div class="film-info">
            <h4><<%= t ".movie_info" %></h4>
            <ul>
              <li>
                <span><%= t ".actor" %></span><%= @film.actors %>
              </li>
              <li>
                <span><%= t ".released_date" %></span><%= @film.release_date %>
              </li>
              <li>
                <span><%= t ".genres" %></span>
                <% @film.categories.each do |category| %>
                  <%= link_to category.name, category_path(category) %>
                <% end %>
              </li>
              <li>
                <span><%= t ".country" %></span><%= @film.country %>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="film-review">
            <div class="film-review-left">
              <h1><%= @film.name %></h1>
              <ul class="genres">
                <% @film.categories.each do |category| %>
                  <li>
                  <%= link_to category.name, category_path(category) %>
                  </li>
                <% end %>
              </ul>
              <span class="duration"><%= @film.duration %> min</span>
              <div class="rate" id="rate" data-rate=<%= @film.average_ratings ? @film.average_ratings : 0 %>><%= t ".rating" %><span id="rateYo"></span><span id="count-rate">( <%= @film.raters.count %> )</span></div>
              <ul class="share">
                <li class="facebook">
                  <a href="http://www.facebook.com/sharer.php?u=<%= request.original_url %>" class="post_share_facebook" onclick="window.open(this.href,
                      '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=260,width=600');return false;">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                </li>
                <li class="twitter">
                  <a href="https://twitter.com/share?url=<%= request.original_url %>" onclick="window.open(this.href,
                      '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=260,width=600');return false;" class="product_share_twitter">
                    <i class="fab fa-twitter"></i>
                  </a>
                </li>
                <li class="googleplus">
                  <a href="https://plus.google.com/share?url=<%= request.original_url %>" onclick="window.open(this.href,
                      '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
                    <i class="fab fa-google-plus-g"></i>
                  </a>
                </li>
              </ul>
              <%= render "review" %>
              <%= render "rate-form" %>
            </div>
            <div class="film-review-right">
              <span><%= @film.average_ratings if @film %></span>
            </div>
          </div>
          <div class="film-story text-content">
            <h3>
              <i class="fas fa-book-open"></i><%= t ".movie_story" %></h3>
            <%= raw @film.introduction %>
          </div>
          <% if @film.trailer.present? %>
          <div class="film-trailer">
            <h3>
              <i class="fas fa-video"></i> <%= t ".movie_trailer" %></h3>
            <a href="<%= @film.trailer %>" data-lity class="trailer">
              <% if @film.video_thumbnail.present? %>
                <%= image_tag @film.video_thumbnail_url, class: "thumb-video" %>
              <% else %>
                <%= image_tag "650x400.png", class: "thumb-video" %>
              <% end %>
              <%= image_tag "play.png", class: "play" %>
            </a>
          </div>
          <% end %>
          <%= render "related" %>
        </div>
      </div>
    </div>
  </div>
</div>
