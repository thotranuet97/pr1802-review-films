<% provide(:title, "All categories") %>
<% provide(:btn_title, "Create category") %>

<div class="page-content container-fluid">
    <div class="page-content-item">
        <div class="row">
            <div class="col-md-4">
              <%= render "form" %>
            </div>
            <div class="col-md-8">
                <table class="table cat-table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="w-5">#</th>
                        <th scope="col" class="w-20">Name</th>
                        <th scope="col" class="w-5">Count</th>
                    </tr>
                    </thead>
                    <tbody>
                        <%= render :partial => 'category', :collection => @categories %>
                    </tbody>
                </table>
                <%= will_paginate @categories %>
            </div>
        </div>
    </div>
</div>