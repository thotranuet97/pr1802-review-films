<div class="archive-heading">
  <div class="container">
    <h2><%= link_to @category.name, category_path, class: "cat-show-link" %></h2>
  </div>
</div>
<div class="archive-main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render "filter" %>
      </div>
      <div class="col-md-9">
        <%= render "search" %>
        <%= render partial: "films/film", collection: @films %>
        <%= will_paginate @films %>
      </div>
    </div>
  </div>
</div>
