<div class="col-md-6">
  <div class="film-review-item">
    <div class="thumb">
      <a href="#"><img src="http://via.placeholder.com/100x100" alt=""></a>
    </div>
    <div class="info">
      <h3><%= link_to review.title, review_path(review) %></h3>
      <ul>
        <li>
          <i class="fas fa-film"></i><a href="#"><%= review.film.name %></a>
        </li>
        <li>
          <i class="far fa-clock"></i><%= review.created_at %>
        </li>
      </ul>
    </div>
  </div>
</div>
